<Window x:Class="Lumberjack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lumberjack"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Toggle Bot" HorizontalAlignment="Center" VerticalAlignment="Center" Width="85" Click="Button_Click"/>
        <TextBlock Name="Status" HorizontalAlignment="Center" Margin="0,100,0,0" TextWrapping="Wrap" Text="Off" VerticalAlignment="Center"/>
    </Grid>
</Window>
